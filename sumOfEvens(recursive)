#include <iostream>

using namespace std;

int sumOfEvens(int nums[], int length)
{
    if(length == 0)
    {
        return 0;
    }
  if(nums[length-1] % 2 == 0)
  {
      return nums[length - 1] + sumOfEvens(nums, length - 1);
  }
  if(nums[length - 1] % 2 == 1)
  {
       return sumOfEvens(nums,length -1);
  }
    return 0;
}

int main()
{
    int arr[] = {0, 1, 2, 3, 4};
    cout << sumOfEvens(arr, 5);
    return 0;
}
