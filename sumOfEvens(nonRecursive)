#include <stdio.h>
#include <iostream>
using namespace std;

int sumOfEvens(int nums[], int length)
{
    if(length <= 1)
    {
        return 0;
    }
    int sum = 0;
    for(int i = 0; i < length; i++)
    {
        if(nums[i] % 2 == 0)
        {
            sum = sum + nums[i];
        }
        
    }
    return sum;
}

int main()
{
    int arr[] = {0, 1, 2, 3, 4};
    cout << sumOfEvens(arr, 5);
    return 0;
}
